# Environment Variables Template for Online Quotation Tool
# Copy this file to .env and fill in your values

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quotation_tool

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (for development)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@quotation-tool.com

# MinIO Configuration (S3-compatible for development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_USE_SSL=false

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200

# pgAdmin Configuration
PGADMIN_EMAIL=admin@quotation-tool.com
PGADMIN_PASSWORD=admin

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG=true
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
